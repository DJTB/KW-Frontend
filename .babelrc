{
  "presets": [
    [
      "env", {
        "loose": true,
        "modules": false,
        "targets": {
          "browsers": ["last 4 versions", "> 1%"]
        }
      }
    ],
    "react",
    "stage-0"
  ],
  "env": {
    "production": {
      "only": ["app"],
      "plugins": [
        [
          "transform-react-remove-prop-types", {
            "removeImport": true
          }
        ],
        [
          "transform-imports", {
            "voca": {
              "transform": "voca/${member}",
              "preventFullImport": true,
              "snakeCase": true
            },
            "date-fns": {
              "transform": "date-fns/${member}",
              "preventFullImport": true,
              "snakeCase": true
            },
            "recompose": {
              "transform": "recompose/${member}",
              "preventFullImport": true
            },
            "wanakana": {
              "transform": "wanakana/${member}",
              "preventFullImport": true
            },
            "lodash": {
              "transform": "lodash/${member}",
              "preventFullImport": true
            },
            "redux-form": {
              "transform": "redux-form/es/${member}",
              "//": "In 'app/logic.js' we have to import full actions file due to redux-form file structure",
              "preventFullImport": false
            }
          }
        ],
        "transform-react-constant-elements",
        "transform-react-inline-elements"
      ]
    },
    "commonjs": {
      "plugins": ["transform-es2015-modules-commonjs", "dynamic-import-node"]
    }
  }
}
